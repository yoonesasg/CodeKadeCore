@{
    List<long> SelectedRoles = ViewBag.selectedroles as List<long>;
}
@model List<codeKade.DataLayer.Entities.User.Role>


<div class="modal fade" id="RoleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">لیست دسترسی ها</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="UserRoles" method="post">
                    <input type="hidden" name="ID" value="@ViewBag.UserId" />

                    @foreach (var role in Model)
                    {
                        <div class="form-group">
                            <input type="checkbox" name="SelectedRole" value="@role.ID" @(SelectedRoles.Any(p=>p == role.ID) ? "checked" : "") /> @role.RoleTitle
                            <br />
                        </div>
                    }


                    <div class="form-group">
                        <input type="submit" class="btn btn-primary text-white" value="ثبت" />
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
@model codeKade.DataLayer.Entities.School.School
@{
    ViewData["Title"] = "افزودن مکان آموزشی";
}


<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h4 class="page-title m-0">@ViewData["Title"]</h4>
                </div>
                <div class="col-md-4">
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end page-title-box -->
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card m-b-30">
            <div class="card-body">
                <form asp-action="Add" asp-controller="School" asp-area="Admin" method="post" enctype="multipart/form-data">
                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2 col-form-label">عنوان</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" asp-for="Name" placeholder="برای مثال : آموزش برنامه نویسی">
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">آدرس</label>
                        <input class="form-control w-75" type="text"asp-for="Address">
                        <span class="text-danger" asp-validation-for="Address"></span>
                    </div>

                    <div class="form-group row">
                        <input type="submit" class="btn btn-primary btn-block" value="ثبت">
                    </div>
                </form>
            </div>
        </div>
    </div> <!-- end col -->
</div>




